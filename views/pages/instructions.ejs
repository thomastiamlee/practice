<!DOCTYPE HTML>
<html>
	<head>
		<%- partial('./partials/head.ejs') %>
	</head>
	<body>
    <%- partial('./partials/topbar.ejs') %>

		<!-- Main container -->
		<div class='grid-container'>
			<div class='grid-x'>
				<div id='div-syntax-information-heading' class='cell small-12 medium-6 medium-offset-3'>
					<h3 id='syntax-practice-text' class='text-center'><%- languagePack.syntax_practice_header %></h3>
				</div>
        <div id='div-syntax-information-panel' class='cell small-12 medium-6 medium-offset-3'>
          <h6><%- languagePack.instructions %></h6>
          <div id='div-syntax-instructions-panel'>
            <ul>
              <li><%- languagePack.inst_1; %></li>
              <li><%- languagePack.inst_2; %></li>
              <li><%- languagePack.inst_3; %></li>
            </ul>
          </div>
        </div>
        <div id='div-syntax-solved-panel' class='cell small-12 medium-3 medium-offset-3'>
          <div id='container'>
            <p><%- languagePack.number_solved %></p>
            <h3><%- syntax_solved %></h3>
          </div>
				</div>
        <div id='div-syntax-information-panel' class='cell small-12 medium-3'>
          <a href='<%- sails.config.custom.baseUrl %>syntax'><h4 id='syntax-practice-start-button'><%- languagePack.start %></h4></a>
        </div>
			</div>
		</div>
		<!-- End of main container -->

		<!-- JQuery script -->
		<script src='https://code.jquery.com/jquery-3.3.1.min.js' integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=' crossorigin='anonymous'></script>
		<!-- End of JQuery script -->

		<!-- Foundation scripts -->
		<script src='<%- sails.config.custom.baseUrl %>js/what-input.js'></script>
		<script src='<%- sails.config.custom.baseUrl %>js/foundation.min.js'></script>
		<script src='<%- sails.config.custom.baseUrl %>js/app.js'></script>
		<!-- End of Foundation scripts -->

		<!-- Application scripts -->
		<script>
		</script>
		<!-- End of application scripts -->
	</body>
</html>
